{
    "name": "daandekker/laravel-chrome-pdf",
    "description": "Generate PDFs in Laravel using headless Chrome. Full CSS support, no Node.js required.",
    "keywords": ["laravel", "pdf", "chrome", "headless", "tailwind"],
    "license": "MIT",
    "authors": [
        {
            "name": "Daan Dekker",
            "email": "daan.dkkr@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0",
        "illuminate/contracts": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "DaanDekker\\ChromePdf\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DaanDekker\\ChromePdf\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DaanDekker\\ChromePdf\\PdfServiceProvider"
            ],
            "aliases": {
                "Pdf": "DaanDekker\\ChromePdf\\Facades\\Pdf"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
